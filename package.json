{
    "name": "contacts-manager",
    "version": "1.0.0",
    "description": "contacts manager application with automated tests & ci/cd",
    "main": "server.js",
    "type": "module",
    "scripts": {
      "start": "node server.js",
      "test:jest": "jest --coverage",
      "test:cucumber": "cucumber-js --format json:./cucumber-report.json",
      "test:playwright": "npx playwright test",
      "test:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=lighthouse-report.json"
    },
    "dependencies": {
      "express": "^4.21.2"
    },
    "devDependencies": {
      "@cucumber/cucumber": "^7.3.2",
      "jest": "^29.7.0",
      "jest-json-reporter": "^1.2.2",
      "lighthouse": "^12.3.0",
      "playwright": "^1.50.1",
      "selenium-webdriver": "^4.29.0"
    }
  }
  